{
  "scripts": {
    "test": "xo",
    "build": "zip -r isometric-contributions.zip src/*",
    "release": "release:*",
    "release:ff": "npx web-ext-submit --source-dir src",
    "release:chrome": "npx webstore upload --source=isometric-contributions.zip --auto-publish"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^2.2.0",
    "web-ext-submit": "^7.5.0",
    "xo": "^0.53.1"
  },
  "xo": {
    "prettier": true,
    "semicolon": false,
    "space": true,
    "prefer-numeric-literals": 0,
    "global": [
      "obelisk",
      "chrome"
    ],
    "env": [
      "browser"
    ],
    "rules": {
      "unicorn/prefer-top-level-await": 0
    }
  }
}
